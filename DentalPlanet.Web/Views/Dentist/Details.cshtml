@model DentalPlanet.Data.Models.Dentist

@{
    ViewData["Title"] = "Dentist Details";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0 rounded-3 overflow-hidden">
                <div class="bg-primary text-white text-center p-4">
                    <img src="@Model.User.ProfileImageUrl"
                         class="rounded-circle img-thumbnail shadow-sm mb-3"
                         alt="@Model.User.FirstName @Model.User.LastName's Profile Picture"
                         style="width: 150px; height: 150px; object-fit: cover;" />
                    <h2 class="mb-3">@Model.User.FirstName @Model.User.LastName</h2>
                    <p class="h5 font-weight-light">@Model.Specialty</p>
                </div>

                <div class="card-body p-4">
                    <div class="row mb-4">
                        <div class="col-md-6 mb-3">
                            <p class="fw-bold mb-1">Specialty:</p>
                            <p class="text-muted">@Model.Specialty</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <p class="fw-bold mb-1">Availability:</p>
                            <p class="text-muted">@Model.Availability</p>
                        </div>
                        <div class="col-md-12 mb-3">
                            <p class="fw-bold mb-1">Email:</p>
                            <p>
                                <a href="mailto:@Model.User.Email" class="text-decoration-none text-primary">
                                    @Model.User.Email
                                </a>
                            </p>
                        </div>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-center mt-4">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-lg">
                            <i class="fas fa-edit me-2"></i> Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger btn-lg">
                            <i class="fas fa-trash me-2"></i> Delete
                        </a>
                        <a asp-action="Index" class="btn btn-secondary btn-lg">
                            <i class="fas fa-arrow-left me-2"></i> Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add some nice card hover effects -->
<style>
    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 1rem 2rem rgba(0, 0, 0, 0.1);
        }

    .btn-lg {
        padding: 1rem 2rem;
        font-size: 1.2rem;
    }

    .bg-primary {
        background-color: #007bff !important;
    }

    .btn-primary, .btn-warning, .btn-danger, .btn-secondary {
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

        .btn-warning:hover {
            background-color: #e0a800;
            border-color: #e0a800;
        }

        .btn-danger:hover {
            background-color: #dc3545;
            border-color: #dc3545;
        }

        .btn-secondary:hover {
            background-color: #6c757d;
            border-color: #6c757d;
        }
</style>