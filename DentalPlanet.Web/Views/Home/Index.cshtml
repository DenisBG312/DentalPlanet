@{
    ViewData["Title"] = "Home Page";
}

<div class="container py-5">
    <!-- Header Section -->
    <div class="text-center mb-5">
        <h1 class="display-4 text-primary">Welcome to Dental Planet</h1>
        <p class="lead text-muted">Your trusted partner for efficient dental clinic management.</p>
    </div>

    <!-- Features Section -->
    <div class="row text-center">
        <!-- Feature 1 -->
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h3 class="card-title text-primary">Patient Management</h3>
                    <p class="card-text">Keep track of patient information, history, and appointments easily.</p>
                </div>
            </div>
        </div>
        
        <!-- Feature 2 -->
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h3 class="card-title text-primary">Appointment Scheduling</h3>
                    <p class="card-text">Schedule, reschedule, or cancel appointments with just a few clicks.</p>
                </div>
            </div>
        </div>
        
        <!-- Feature 3 -->
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h3 class="card-title text-primary">Billing & Payment</h3>
                    <p class="card-text">Streamline billing and payment processing for your dental services.</p>
                </div>
            </div>
        </div>
    </div>
</div>